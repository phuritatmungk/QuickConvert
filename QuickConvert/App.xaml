<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QuickConvert"
             xmlns:resources="clr-namespace:QuickConvert.Resources"
             xmlns:converters="clr-namespace:QuickConvert.Converters"
             x:Class="QuickConvert.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <resources:BookmarkStarColorConverter x:Key="BookmarkStarColorConverter" />
            <resources:StarImageSourceConverter x:Key="StarImageSourceConverter" />
            <resources:CurrencyCodeToFlagConverter x:Key="CurrencyCodeToFlagConverter" />
            <converters:StringPathToGeometryConverter x:Key="StringPathToGeometryConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
